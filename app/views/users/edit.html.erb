<h1>Edit user</h1>

<div class="row">
    <div class="span6 offset3">
        <%= form_for(@user) do |f| %>
            <%= render 'fields', :f => f %>
        <% end %>
        <%= gravatar_for @user, :size => 150, :class => "gr" %><br/>
        <a class="changePhoto" href="http://gravatar.com/emails/" target=_blank> Change</a>
    </div>
</div>
